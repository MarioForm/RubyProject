<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <h2>Movies</h2>
  </div>

  <div class="col-md-2 col-md-offset-4">
    <%= link_to new_movie_path, remote: true do %>
      <button class="btn btn-default">New</button>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-2" id="movie-form" style="display:none;"></div>
</div>

<div class="row">
  <div class="col-md-7 col-md-offset-1" id="movies"><%= render @movies %></div>
</div>

