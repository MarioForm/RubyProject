<p id="notice"><%= notice %></p>

<h1>User Movies</h1>

<link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css"/>


<table>
  <thead>
    <tr>
       <th>Poster</th>
       <th>Title</th>
       <th>Genre</th>
       <th>Year</th>
       <th>Apprating</th>
       <th>Plot</th>
       <th colspan="3"></th>
     </tr>
   </thead>
 
   <tbody>
     <% @userMovies.each do |movie| %>
       <tr>
         <td><img src="<%= movie.poster %>"></td>
         <td><%= movie.title %></td>
         <td><%= movie.genre %></td>
         <td><%= movie.year %></td>
         <td><%= movie.appRating %></td>
         <td><%= movie.plot %></td>
         <td><%= link_to 'Show', movie %></td>
         <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
         <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <br>
 
 <%= link_to 'Go Back to Search', root_path, :class=>"btn btn-default" %>